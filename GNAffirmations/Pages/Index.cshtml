@page
@model IndexModel
@{
    ViewData["Title"] = "GN Affirmations";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .welcome {
            font-size: 30px; 
            color: white;
            text-align: center;
            font-family: Arial, sans-serif; 
            font-style: italic;
        }

        body, html {
            background-color: deeppink;
            cursor: url('/images/perfectheart.png'), auto; 
        }

        .create {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: pink;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            font-weight: bold;
           
        }
   
        .create:active
        {
            opacity: 0.5;
        }


    </style>
</head>
<body>
    <h1 class="welcome">Welcome to the GN Affirmations!</h1>
    <button class="create">GET AFFIRMATION</button>
</body>
</html>
